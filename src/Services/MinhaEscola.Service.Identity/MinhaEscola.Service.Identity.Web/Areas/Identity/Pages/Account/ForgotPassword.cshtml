                                </div>
                                </div>*@
                            </div>
                        </div>
                        <div>
                            <h2 style="font-weight: 700; line-height: 26px;">Forgot your password?</h2>
                            <h6 style="color: gray; font-weight: 200;">Faça login na sua conta e começe sua jornada</h6>
                            <br />
                            <div style="gap: 10px; display: flex; flex-direction: column;">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <div class="form-floating">
                                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                                    <label asp-for="Input.Email" class="form-label"></label>
                                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                                </div>
                                @*<div>
                                <div class="checkbox">
                                <label asp-for="Input.RememberMe" class="form-label">
                                <input class="form-check-input" asp-for="Input.RememberMe" />
                                @Html.DisplayNameFor(m => m.Input.RememberMe)
                                </label>
                                </div>
                                </div>*@
                                <div class="d-flex gap-2 align-items-center justify-content-lef">
                                    <button id="login-submit" type="submit" class="btn w-100 btn-primary">Reset password</button>
                                    @*<a class="btn btn-primary" asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Cadastrar-se</a>*@
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </section>
        </div>
    </div>
</div>
