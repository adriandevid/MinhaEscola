@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "";
    ViewData["background-image"] = "/images/background-login.png";
}

<h1>@ViewData["Title"]</h1>
<div class="row justify-content-center align-content-center align-items-center" style="height: 50rem; margin: 1rem;">
    <div class="card" style="width: 30rem; box-shadow: 1px 3px 20px 3px #7d7d7d96;">
        <div class="card-body">
            <section>
                <form method="post">
                    <div style="padding: 20px;">
                        <div class="header-card-login d-flex justify-content-between align-content-center align-items-center" style="padding-bottom: 20px;">
                            <img src="/images/logo.png" />
                            <div class="help-login-page d-flex flex-row align-items-center gap-2">
                                @*<div style="margin-right: -40px; background-color: white; border-radius: 40px; z-index: 2; width: 60px; height: 60px; background-position: center; background-size: cover; background-image: url(/images/person-3-login.png);  box-shadow: 1px 2px 20px 2px #7d7d7d96;"></div>*@
